{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest-react",
        "react-hooks",
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "never"],
        "react/jsx-filename-extension": [ "warn", {"extensions": [".tsx"]} ],
        "react/jsx-one-expression-per-line": "off",
        "@typescript-eslint/no-use-before-define": ["error"],
        "no-use-before-define": "off",
        "react/jsx-props-no-spreading": "off",
        "no-unused-vars": "warn",
        "import/extensions": [
            "error",
            "ignorePackages",
            { "ts": "never", "tsx": "never" }
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
